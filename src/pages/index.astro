<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <QuickContact />
    <main>
      <Hero />
      <MyProjects />
      <Contact />
    </main>
    <Footer />
  </body>
