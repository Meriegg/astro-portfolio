---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<a
  href={href}
  class="text-base dark:text-text-secondary text-lightMode-text-secondary hover:dark:text-green-accent hover:text-lightMode-green-accent decoration-2 hover:underline font-bold"
  >{text}</a
>
