---
import Menu from "./Menu";
import HeaderLink from "./HeaderLink.astro";
import Terminal from "../../components/Terminal/Terminal";
---

<header
  class="fixed top-0 w-full flex justify-between z-20 items-center py-6 sectionPadding bg-gradient-to-b dark:from-main-bg from-lightMode-main-bg to-transparent"
  style="backdrop-filter: blur(10px);"
>
  <div class="flex items-center gap-4">
    <Menu client:idle />
    <a href="/">
      <div class="flex items-center flex-wrap">
        <picture>
          <source
            srcset="/Logos/Logo_Dark.svg"
            class="w-12 h-12"
            media="(prefers-color-scheme: dark)"
          />
          <img alt="My Logo" src="/Logos/Logo_Light.svg" class="w-12 h-12" />
        </picture>
        <h1 class="text-2xl sm:hidden">
          Mario<span class="dark:text-green-accent text-lightMode-green-accent font-semibold"
            >Dev</span
          >
        </h1>
      </div>
    </a>
    <div class="flex items-center gap-4 sm:hidden">
      <HeaderLink href="/" text="Home" />
      <HeaderLink href="/blog" text="My Blog" />
    </div>
  </div>

  <Terminal client:idle />
</header>
